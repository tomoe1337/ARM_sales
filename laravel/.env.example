APP_NAME="ARM Sales"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Europe/Kiev
APP_URL=http://localhost

APP_LOCALE=ru
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=ru_RU

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database - PostgreSQL в Docker
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=arm_sales
DB_USERNAME=arm_user
DB_PASSWORD=arm_password_2024

# Redis для кеширования и очередей
REDIS_HOST=redis
REDIS_PASSWORD=redis_password_2024
REDIS_PORT=6379

# Session и Cache настройки
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_DRIVER=file
CACHE_PREFIX=

# Mail настройки (настройте под ваш SMTP)
MAIL_MAILER=smtp
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@arm-sales.local"
MAIL_FROM_NAME="${APP_NAME}"

# AI API для аналитики (получите токен от ProxyAPI)
AI_API_TOKEN=your_gemini_api_token_here
AI_API_URL=https://api.proxyapi.ru/google/v1beta/models/gemini-2.0-flash-lite:generateContent

# Filament настройки
FILAMENT_DOMAIN=
FILAMENT_PATH=admin

# Vite настройки для продакшена
VITE_APP_NAME="${APP_NAME}"

# BlueSales CRM Integration
BLUESALES_DEFAULT_MANAGER_ID=1

# Security настройки
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1

# Telescope (отключен в продакшене)
TELESCOPE_ENABLED=false